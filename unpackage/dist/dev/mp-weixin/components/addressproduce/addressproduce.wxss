.addressContent {
  height: 100vh;
  background-color: #F9F9F9FF;
}
.card-container {
  width: 100%;
}
.card-container .tipstext {
  display: flex;
  margin: 0 20rpx;
  border-radius: 10rpx;
  padding-left: 10rpx;
}
.card-container .tipstext text {
  font-size: 28rpx;
  color: #000;
}
.card-container .left-top-box {
  padding: 20rpx;
  font-size: 30rpx;
}
.card-container .left-top-box .nickNameBox,
.card-container .left-top-box .phoneBox,
.card-container .left-top-box .addressBox {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 0 30rpx;
  height: 118rpx;
  background-color: #fff;
  border-radius: 8rpx;
  line-height: 118rpx;
  color: #898888FF;
}
.card-container .left-top-box .nickNameBox text:nth-child(1),
.card-container .left-top-box .phoneBox text:nth-child(1),
.card-container .left-top-box .addressBox text:nth-child(1) {
  color: #000;
  font-weight: 700;
}
.card-container .left-top-box .addressBox view {
  padding: 5rpx 0;
  line-height: 51rpx;
}
.card-container .left-bottom-box {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
}
.card-container .left-bottom-box .shipping-button {
  margin: 20rpx;
  flex: 1;
  border-radius: 0;
  border: 0;
  font-size: 28rpx;
  color: #fff;
  border-radius: 15rpx;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #248edf;
}
.popupBox {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: #000;
  opacity: 0.5;
}
.nickNamepopup {
  opacity: 1;
  position: fixed;
  left: 50%;
  top: 30%;
  transform: translateX(-50%);
  padding: 20rpx;
  width: 80%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  background-color: #f4f4f4;
  border-radius: 15rpx;
  z-index: 100;
  padding: 50rpx;
  height: 240rpx;
  justify-content: space-between;
}
.nickNamepopup text {
  margin-left: 10rpx;
  font-size: 30rpx;
  font-weight: 700;
}
.nickNamepopup input {
  padding-left: 10rpx;
  overflow: hidden;
  height: 70rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  background-color: #fff;
  line-height: 70rpx;
}
.nickNamepopup .popupBottom {
  margin-top: 20rpx;
  display: flex;
}
.nickNamepopup .popupBottom button {
  border-radius: 0;
  border: 0;
  flex: 1;
  font-size: 28rpx;
  color: #fff;
  border-radius: 15rpx;
}
.nickNamepopup .popupBottom button:nth-child(1) {
  background-color: #f55236;
}
.nickNamepopup .popupBottom button:nth-child(2) {
  margin-left: 20rpx;
  background-color: #289bf3;
}
.nickNamepopup .popupBottom button:nth-child(1):active {
  background-color: #e74b32;
  box-shadow: #000 -1rpx -1rpx 2rpx;
}
.nickNamepopup .popupBottom button:nth-child(2):active {
  background-color: #248edf;
  box-shadow: #000 -1rpx -1rpx 2rpx;
}
