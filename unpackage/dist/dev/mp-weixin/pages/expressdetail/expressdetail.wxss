
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}
.package-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 90%;
  padding: 20px;
  background-color: #fff;
  border-radius: 10px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}
.package-image {
  width: 100px;
  height: 100px;
  margin-bottom: 20px;
}
.package-details {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.package-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 10px;
}
.package-subtitle {
  font-size: 16px;
  color: #666;
  margin-bottom: 10px;
}
.package-info {
  font-size: 14px;
  color: #999;
  margin-bottom: 10px;
}
.package-status {
  font-size: 14px;
  color: #999;
}
.loading {
  font-size: 16px;
  color: #999;
}
